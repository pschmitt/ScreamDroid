<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_cat_input">
    <CheckBoxPreference
            android:key="@string/pref_key_discard_input"
            android:title="@string/pref_discard_input"
            android:summary="@string/pref_discard_input_summ"
            android:defaultValue="true" />
    <CheckBoxPreference
            android:key="@string/pref_key_upper_case"
            android:title="@string/pref_upper_case"
            android:summary="@string/pref_upper_case_summ"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_cat_user_input">
    <CheckBoxPreference
            android:key="@string/pref_key_force_landscape"
            android:title="@string/pref_force_landscape"
            android:summary="@string/pref_force_landscape_summ"
            android:defaultValue="false" />
    <CheckBoxPreference
            android:key="@string/pref_key_hide_actionbar"
            android:title="@string/pref_hide_actionbar"
            android:summary="@string/pref_hide_actionbar_summ"
            android:defaultValue="false" />
    <CheckBoxPreference
            android:key="@string/pref_key_hide_back_button"
            android:title="@string/pref_hide_back_button"
            android:summary="@string/pref_hide_back_button_summ"
            android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>